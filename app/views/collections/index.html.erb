<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center">Coleções</div></div>
    <div class="panel-body">
    <p id="notice"><%= notice %></p>
    
    <table class="table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Data inicio</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @collections.each do |collection| %>
          <tr>
            <td><%= collection.name %></td>
            <td><%= collection.data_inicio %></td>
            <td><%= link_to 'Mostrar', collection %></td>
            <td><%= link_to 'Editar', edit_collection_path(collection) %></td>
            <td><%= link_to 'Deletar', collection, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <div class="text-center"> <%= link_to 'Nova Coleção', new_collection_path, {:style=>'color:black;', :class => "btn btn-default"} %> </div>
    
    
  </div>
</div>
