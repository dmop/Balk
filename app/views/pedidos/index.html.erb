<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center">Pedidos</div></div>
    <div class="panel-body">
    <p id="notice"><%= notice %></p>

<table class="table table-hover">
      <thead>
        <tr>
          <th>
             <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
               Cliente
          </th>
          <th>
             <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
             Quantidade de Itens
          </th>
          <th>
            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            Pre√ßo Total
            </th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @pedidos.each do |pedido| %>
          <tr>
            <td><%= Cliente.find_by(id: pedido.cliente_id).nome_fantasia %></td>
            <td><%= pedido.qtd_itens %></td>
            <td><%= pedido.preco_total %></td>
            <td><%= link_to 'Mostrar', pedido %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </td>
            <td>
              <%= link_to 'Editar', edit_pedido_path(pedido) %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </td>
            <td>
              <%= link_to 'Deletar', pedido, method: :delete, data: { confirm: 'Voce tem certeza?' } %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    
      <div class="text-center"> <%= link_to 'Novo pedido', new_pedido_path, {:style=>'color:black;', :class => "btn btn-default"} %> </div>
    
  </div>
</div>
