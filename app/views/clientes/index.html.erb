
<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center">Clientes</div></div>
    <div id="painel_body" class="paine-body">
      <p id="notice"><%= notice %></p>
    
      <table class="table table-hover">
        <thead>
          <tr>
            <th>
               <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
               Nome Fantasia
            </th>
            <th>
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
              Email
              </th>
              <th>
              <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
              CNPJ
              </th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
      
        <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome_fantasia %></td>
            <td><%= cliente.email %></td>
            <td><%= cliente.cnpj %></td>
            <td><%= link_to 'Mostrar', cliente %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </td>
            <td><%= link_to 'Editar', edit_cliente_path(cliente) %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </td>
            <td><%= link_to 'Deletar', cliente, method: :delete, data: { confirm: 'Voce tem certeza?' } %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    <div class="text-center"> <%= link_to 'Cadastrar Cliente', new_cliente_path, {:style=>'color:black;', :class => "btn btn-default"} %> </div>
    
  </div>
</div>

