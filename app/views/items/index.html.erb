<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center">Produtos</div></div>
    
    <p id="notice"><%= notice %></p>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>
             <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
               Coleção
          </th>
          <th>
             <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
               Nome
          </th>
          <th>
             <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
               Referencia
          </th>
          <th>
             <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
               Preço Unitario
          </th>
          <th>
             <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
               Info
          </th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.collection_id %></td>
            <td><%= item.name %></td>
            <td><%= item.referencia %></td>
            <td><%= item.preco_unitario %></td>
            <td><%= item.info %></td>
            <td><%= link_to 'Mostrar', item %></td>
            <td><%= link_to 'Editar', edit_item_path(item) %></td>
            <td><%= link_to 'Deletar', item, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
  
</div>