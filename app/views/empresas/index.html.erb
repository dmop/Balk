
<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center">Empresas</div></div>
    <div class="panel-body">
    <p id="notice"><%= notice %></p>
    
    <table class="table">
      <thead>
        <tr>
          <th>
             <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
             Nome
          </th>
          <th>
            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            Email
            </th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @empresas.each do |empresa| %>
          <tr>
            <td><%= empresa.nome_fantasia %></td>
            <td><%= empresa.email %></td>
            <td><%= link_to 'Mostrar', empresa %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </td>
            <td>
              <%= link_to 'Editar', edit_empresa_path(empresa) %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </td>
            <td>
              <%= link_to 'Deletar', empresa, method: :delete, data: { confirm: 'Voce tem certeza?' } %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    
      <div class="text-center"> <%= link_to 'Cadastrar Empresa', new_empresa_path, {:style=>'color:black;', :class => "btn btn-default"} %> </div>
    
  </div>
</div>

